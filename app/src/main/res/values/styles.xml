<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Card_TextView">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Card_parent">
        <item name="android:layout_margin">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@drawable/sector_ba_card</item>
    </style>

    <style name="Card_1">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Card_2">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Card_3">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">right|bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Edit_experience_dialog" parent="@android:style/Theme.Dialog">
        2 <item name="android:windowFrame">@null</item>
        3 <item name="android:windowIsFloating">true</item>
        4 <item name="android:windowIsTranslucent">true</item>
        5 <item name="android:windowNoTitle">true</item>
        6 <item name="android:background">@android:color/transparent</item>
        7 <item name="android:windowBackground">@android:color/transparent</item>
        8 <item name="android:backgroundDimEnabled">true</item>
        9 <item name="android:backgroundDimAmount">0.6</item>
        10 </style>
</resources>
